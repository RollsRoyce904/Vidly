@model Vidly.ViewModels.NewCustomerViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Customer</h4>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Customer.Name)
            <div>
                @Html.EditorFor(model => model.Customer.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Customer.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Customer.Birthday)
            <div>
                @Html.EditorFor(model => model.Customer.Birthday, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Customer.Birthday, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(model => model.Customer.IsSubscribedToNewsLetter) Subscribe to Newsletter
            </label>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Customer.MemberShipTypeId)
            <div>
                @Html.DropDownListFor(model => model.Customer.MemberShipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership",  new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Customer.MemberShipTypeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
